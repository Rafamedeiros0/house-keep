    "react-dom": "19.2.0",
    "tailwind-merge": "3.4.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@tailwindcss/postcss": "4",
    "@types/node": "20",
    "@types/react": "19",
    "@types/react-dom": "19",
    "commitizen": "4.3.1",
    "cz-conventional-changelog": "3.3.0",
